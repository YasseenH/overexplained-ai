{
  "compilerOptions": {
    "module": "commonjs",
    "pretty": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowJs": true,
    "target": "es6",
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": ["es6", "dom"],
    "skipLibCheck": true
  }
}
