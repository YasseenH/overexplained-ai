generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

 model NewsletterSubscriber {
   id         String    @id @default(auto()) @map("_id") @db.ObjectId
   email      String    @unique
   topics     String[]
   lastTopic  Int       @default(0)
   token      String
   confirmed  Boolean
   active     Boolean
   createdAt  DateTime  @default(now())
   updatedAt  DateTime  @updatedAt
 }

model DailyNewsletter {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  topic     String
  date      String
  content   String
  createdAt DateTime @default(now())

  @@unique([topic, date])
}